<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Informe de Ventas por Producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container mt-5">
  <h1>Informe de Ventas por Producto</h1>

  <% if (informe.length === 0) { %>
    <p>No hay ventas registradas.</p>
  <% } else { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Unidades Vendidas</th>
          <th>Total Recaudado</th>
        </tr>
      </thead>
      <tbody>
        <% informe.forEach(p => { %>
          <tr>
            <td><%= p._id %></td>
            <td><%= p.totalVendidas %></td>
            <td>$<%= p.totalRecaudado.toFixed(2) %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
  

  <a href="/" class="btn btn-warning">Volver al inicio</a>
</div>
</body>
</html>

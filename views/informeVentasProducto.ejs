<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Informe de Ventas por Mes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <h1>Informe de Ventas por Mes</h1>

  <% if (informe.length === 0) { %>
    <p>No hay ventas registradas.</p>
  <% } else { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Mes</th>
          <th>AÃ±o</th>
          <th>Total Recaudado</th>
          <th>Cantidad de Pedidos</th>
        </tr>
      </thead>
      <tbody>
        <% informe.forEach(i => { %>
          <tr>
            <td><%= i._id.mes %></td>
            <td><%= i._id.anio %></td>
            <td>$<%= i.totalRecaudado.toFixed(2) %></td>
            <td><%= i.cantidadPedidos %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>

  <a href="/" class="btn btn-warning">Volver al inicio</a>
</body>
</html>
